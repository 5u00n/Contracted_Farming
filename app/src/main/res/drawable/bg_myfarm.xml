<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape>

            <solid android:color="@color/seed"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
            <size
                android:width="200dp"
                android:height="200dp" />
        </shape>



    </item>




    <item
        android:width="100dp"
        android:height="100dp"
        android:left="20dp"
        android:top="20dp">
        <shape android:shape="oval">

            <solid android:color="#16A2F6AC" />

        </shape>
    </item>

    <item
        android:width="30dp"
        android:height="30dp"
        android:left="120dp"
        android:top="10dp">
        <shape android:shape="oval">

            <solid android:color="#14A2F6AC" />

        </shape>
    </item>

    <item
        android:width="10dp"
        android:height="10dp"
        android:left="150dp"
        android:top="90dp">
        <shape android:shape="oval">

            <solid android:color="#0FA2F6AC" />

        </shape>
    </item>




</layer-list>