<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:elevation="8dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:elevation="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/view_farmer_my_plant_plant_img"
            android:background="@drawable/flag_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_img_login"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/view_farmer_my_plant_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        android:background="@color/seed"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="170dp"
            app:cardCornerRadius="80dp"
            android:layout_marginVertical="24dp">
        <ImageView
            android:background="@color/md_theme_dark_onSurface"
            android:id="@+id/view_farmer_my_plant_farm_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bg_farm"
            android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="16dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/view_farmer_my_plant_plot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Plot Name"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        <TextView
            android:id="@+id/view_farmer_my_plant_plant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="PlantName"
            android:textAlignment="center"
            android:textSize="16sp" />
            <TextView
                android:id="@+id/view_farmer_my_plant_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/view_farmer_my_plant_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Progress % Compete"

                android:textAlignment="center"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



