<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:elevation="14dp"
        android:layout_width="match_parent"
        app:cardBackgroundColor="?attr/colorPrimary"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Plant : "
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/baseline_add_24"
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_agent_image"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_agent_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Agent Name">

            <requestFocus />

        </EditText>

        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_agent_mobilno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobil No">

        </EditText>
        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_agent_adhar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adhar No">

        </EditText>
        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_agent_dis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="District">

        </EditText>
        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_agent_taluka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Taluka">

        </EditText>
        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_agent_village"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Village">

        </EditText>
        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_agent_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="circle">

        </EditText>


        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_agent_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Pincode"
            android:gravity="start|top"
             />


    </LinearLayout>


</LinearLayout>