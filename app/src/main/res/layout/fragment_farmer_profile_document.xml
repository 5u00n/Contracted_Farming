<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:paddingHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/agent_verification_identity_aadhaar_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
        <TextView
            android:id="@+id/agent_verification_identity_aadhaar_no"
            android:textSize="18sp"
            android:text="@string/aadhaar_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/agent_verification_identity_pan_img"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <TextView
            android:id="@+id/agent_verification_identity_pan_no"
            android:textSize="18sp"
            android:text="@string/pan_card_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



        <ImageView
            android:id="@+id/agent_verification_identity_bank_img"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

    </LinearLayout>



</ScrollView>