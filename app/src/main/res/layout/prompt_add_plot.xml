<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_plot_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Farm Name">

            <requestFocus/>


        </EditText>

        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_addplot_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Area in Acre...">


        </EditText>

        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_addplot_Survayno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Survay No">

        </EditText>

        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_addplot_Gatno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gat NO ">

        </EditText>
        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_addplot_Village"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Village">

        </EditText>
        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_addplot_taluka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Taluka"/>


        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_addplot_District"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="District"/>






    </LinearLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:paddingVertical="5dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/prompt_plot_img_url"/>
                <TextView
                    android:paddingLeft="5dp"
                    android:textSize="20sp"
                    android:id="@+id/prompt_add_plot_text"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="Select farm Image"
                    android:layout_marginBottom="5dp"/>


            </LinearLayout>
            <ImageButton
                android:id="@+id/farmer_addplot_imageview_plot_selimage"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_photo_camera_24" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/prompt_7_12_url"/>
                <EditText
                    android:id="@+id/prompt_add_7_12"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter 7_12 document no."
                    android:layout_marginBottom="5dp"/>


            </LinearLayout>
            <ImageButton
                android:id="@+id/farmer_addplot_imageview_7_12_selimage"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_cloud_upload_24" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/prompt_8a_url"/>
                <EditText
                    android:id="@+id/prompt_add_8a"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter 8a document no."
                    android:layout_marginBottom="5dp"/>


            </LinearLayout>
            <ImageButton
                android:id="@+id/farmer_addplot_imageview_8a_selimage"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_cloud_upload_24" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <LinearLayout
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:backgroundTint="@color/md_theme_dark_errorContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginRight="40dp"
                android:id="@+id/prompt_cancel_button"
                android:layout_marginBottom="10dp"/>

        <Button
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Plot"
            android:id="@+id/prompt_addbutton"
            android:layout_marginBottom="10dp"/>
        </LinearLayout>

</LinearLayout>
</ScrollView>