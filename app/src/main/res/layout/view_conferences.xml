<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_conf_cardview"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/view_conf_text_topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Topic"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/view_conf_text_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BY: "
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/view_conf_text_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AT :"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/view_conf_text_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date: " />

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="10dp"
                android:layout_weight="0.02"
                android:layout_width="100dp"
                app:cardCornerRadius="5dp"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/view_conf_img_post"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_farm"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingRight="20dp">

            <ImageButton
                android:id="@+id/view_conf_img_button_share"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_share_24" />

            <ImageButton
                android:id="@+id/view_conf_img_button_copy"
                android:layout_width="40dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_content_copy_24" />

        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>