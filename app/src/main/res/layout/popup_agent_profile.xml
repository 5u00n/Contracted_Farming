<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:elevation="10sp"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Manager Profile"
            android:textSize="22sp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="18dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="100dp"
                    android:layout_margin="6dp">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/popup_agent_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/popup_agent_name"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Name Sirname"
                    android:textSize="22sp" />
                <TextView
                    android:textSize="15sp"
                    android:text="94203943293"
                    android:autoLink="phone"
                    android:id="@+id/popup_agent_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15dp"
                    android:layout_marginVertical="5dp"
                    android:id="@+id/popup_agent_village"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Village"/>
                <TextView
                    android:layout_marginVertical="5dp"
                    android:textSize="15dp"
                    android:id="@+id/popup_agent_taluka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="taluka"/>
                <TextView
                    android:layout_marginVertical="5dp"
                    android:textSize="15dp"
                    android:id="@+id/popup_agent_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pin"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="15dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginVertical="5dp"
                    android:textSize="15dp"
                    android:id="@+id/popup_agent_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Circle"/>
                <TextView
                    android:layout_marginVertical="5dp"
                    android:textSize="15dp"
                    android:id="@+id/popup_agent_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>





</LinearLayout>