<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15px"
    android:layout_height="270dp"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/bg_farm"
                android:scaleType="fitXY"
                android:id="@+id/view_farmer_news_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:textColor="@color/white"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textSize="30sp"
                android:text="dummy topic"
                android:id="@+id/view_farmer_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/view_farmer_news_data"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:textColor="@color/white"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textSize="19sp"
                android:text="News Data ....."
                android:id="@+id/view_farmer_news_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/view_farmer_news_time"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/view_farmer_news_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="xx:xx:xxxx"
                android:id="@+id/view_farmer_news_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>