<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:orientation="vertical"
        android:padding="18dp">


        <androidx.cardview.widget.CardView
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="100dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="30dp">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/agent_verification_identity_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/agent_verification_identity_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Name Sirname"
                android:textSize="34sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/agent_verification_identity_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/agent_verification_identity_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:text="94203943293"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:weightSum="2">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_marginVertical="10dp"
                    android:id="@+id/agent_verification_identity_village"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Village"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginVertical="10dp"
                    android:id="@+id/agent_verification_identity_taluka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="taluka"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginVertical="10dp"
                    android:id="@+id/agent_verification_identity_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pin"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_marginVertical="10dp"
                    android:id="@+id/agent_verification_identity_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Circle"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginVertical="10dp"
                    android:id="@+id/agent_verification_identity_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District"
                    android:textSize="15dp" />
                <TextView
                    android:layout_marginVertical="10dp"
                    android:id="@+id/agent_verification_identity_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>