<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    app:cardCornerRadius="7dp"
    android:layout_margin="10dp"
    android:background="@color/seed"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#D2FABE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="220dp"
        >

        <TextView
            android:id="@+id/farmer_plant_id"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:paddingVertical="2dp"
            android:text=""
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/farmer_plant_background_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
        <ImageView
            android:layout_marginBottom="50dp"
            android:minHeight="180dp"
            android:padding="15dp"
            android:id="@+id/farmer_plant_img"
            android:scaleType="centerCrop"
            android:src="@drawable/farmer_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#4CAF50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/farmer_plant_img">


            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/farmer_plant_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Plant name"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/farmer_plant_lifespan_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:text="lifecycle"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>