<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.ContractedFarming.NoActionBar"

    >

    <LinearLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:elevation="10dp"
                android:outlineAmbientShadowColor="@color/black"
                android:padding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:baselineAligned="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingHorizontal="5dp"
                            android:theme="@style/Theme.ContractedFarming.NoActionBar">

                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                app:cardBackgroundColor="@android:color/holo_green_dark"
                                app:cardCornerRadius="40dp">

                                <ImageView
                                    android:contentDescription="Temp image"
                                    android:layout_width="40dp"
                                    android:layout_height="35dp"
                                    app:srcCompat="@drawable/ic_baseline_thermostat_24" />

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/weather_data_temprature"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="30 C"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Temperature"

                                    android:textSize="12sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingHorizontal="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                app:cardBackgroundColor="@android:color/holo_orange_light"
                                app:cardCornerRadius="40dp">

                                <ImageView
                                    android:contentDescription="Wind Speed"
                                    android:layout_width="40dp"
                                    android:layout_height="35dp"
                                    app:srcCompat="@drawable/baseline_speed_24" />

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/weather_data_wind_speed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:shadowColor="#3E3434"
                                    android:text="30 m/s"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="WindSpeed"
                                    android:textSize="12sp" />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                app:cardBackgroundColor="@android:color/holo_blue_bright"
                                app:cardCornerRadius="40dp">

                                <ImageView
                                    android:contentDescription="Humidity"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:padding="5dp"
                                    app:srcCompat="@drawable/baseline_water_drop_24" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/weather_data_hunidity"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="40 %"

                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Humidity"
                                    android:textSize="12sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="5dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:padding="2dp"
                                app:cardBackgroundColor="@android:color/holo_purple"
                                app:cardCornerRadius="40dp">

                                <ImageView
                                    android:contentDescription="Rainfall"
                                    android:layout_width="40dp"
                                    android:layout_height="35dp"
                                    android:padding="5dp"
                                    app:srcCompat="@drawable/baseline_cloud_24" />

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/weather_data_rainfall"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="50 mm"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Rainfall"
                                    android:textSize="12sp" />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView6"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textStyle="bold" />
                <View
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"/>

                <Button
                    android:id="@+id/farmer_dash_see_all_story_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="0dp"
                    android:padding="0px"
                    android:text="See My Story"
                    android:textSize="8sp" />


            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/horizontal"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:fillViewport="true"
                android:isScrollContainer="false"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view6">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/addStory_layout"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/addStoryImg"
                            android:layout_width="100dp"
                            android:layout_height="130dp"

                            android:layout_marginStart="16dp"
                            android:alpha="0.9"
                            android:scaleType="centerCrop"
                            android:src="@drawable/farmer_img"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:riv_corner_radius="10dip" />

                        <View
                            android:id="@+id/view4"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/bg_black_shade"
                            app:layout_constraintBottom_toBottomOf="@+id/addStoryImg"
                            app:layout_constraintEnd_toEndOf="@+id/addStoryImg"
                            app:layout_constraintStart_toStartOf="@+id/addStoryImg"
                            app:layout_constraintTop_toTopOf="@+id/addStoryImg" />

                        <View
                            android:id="@+id/view8"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            android:backgroundTint="@color/white"
                            app:layout_constraintBottom_toBottomOf="@+id/addStory"
                            app:layout_constraintEnd_toEndOf="@+id/addStory"
                            app:layout_constraintStart_toStartOf="@+id/addStory"
                            app:layout_constraintTop_toTopOf="@+id/addStory" />

                        <ImageView
                            android:contentDescription="Add"
                            android:id="@+id/addStory"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_add_story"
                            app:layout_constraintBottom_toBottomOf="@+id/addStoryImg"
                            app:layout_constraintEnd_toEndOf="@+id/addStoryImg"
                            app:layout_constraintStart_toStartOf="@+id/addStoryImg"
                            app:layout_constraintTop_toTopOf="@+id/addStoryImg"
                            app:layout_constraintVertical_bias="0.3" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Create a story"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            app:layout_constraintEnd_toEndOf="@+id/addStory"
                            app:layout_constraintStart_toStartOf="@+id/addStory"
                            app:layout_constraintTop_toBottomOf="@+id/addStory" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/farmerstoryRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Explore Plants"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <View
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_width="0dp"/>

                <Button
                    android:id="@+id/farmer_dash_explore_expand_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="0dp"
                    android:padding="0px"
                    android:text="Expand"
                    android:textSize="8sp" />


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/farmer_explore_plant"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="My Plants"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <View
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_width="0dp"/>

                <Button
                    android:id="@+id/farmer_dash_my_plant_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="0dp"
                    android:padding="0px"
                    android:text="See Details"
                    android:textSize="8sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/addPlant_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/addPlantImg"
                        android:layout_width="160dp"
                        android:layout_height="190dp"
                        android:layout_marginStart="16dp"
                        android:alpha="0.9"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_img_login"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:riv_corner_radius="10dip" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/bg_black_shade"
                        app:layout_constraintBottom_toBottomOf="@+id/addPlantImg"
                        app:layout_constraintEnd_toEndOf="@+id/addPlantImg"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/addPlantImg"
                        app:layout_constraintTop_toTopOf="@+id/addPlantImg"
                        app:layout_constraintVertical_bias="0.0" />

                    <View
                        android:id="@+id/view9"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:backgroundTint="@color/white"
                        app:layout_constraintBottom_toBottomOf="@+id/addPlant"
                        app:layout_constraintEnd_toEndOf="@+id/addPlant"
                        app:layout_constraintStart_toStartOf="@+id/addPlant"
                        app:layout_constraintTop_toTopOf="@+id/addPlant" />

                    <ImageView
                        android:contentDescription="Add"
                        android:id="@+id/addPlant"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_add_story"
                        app:layout_constraintBottom_toBottomOf="@+id/addPlantImg"
                        app:layout_constraintEnd_toEndOf="@+id/addPlantImg"
                        app:layout_constraintStart_toStartOf="@+id/addPlantImg"
                        app:layout_constraintTop_toTopOf="@+id/addPlantImg"
                        app:layout_constraintVertical_bias="0.3" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Plant"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/addPlant"
                        app:layout_constraintStart_toStartOf="@+id/addPlant"
                        app:layout_constraintTop_toBottomOf="@+id/addPlant" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/farmer_myplantsrv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="My Farms"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <View
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_width="0dp"/>

                <Button
                    android:id="@+id/farmer_dash_my_farm_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="0dp"
                    android:padding="0px"
                    android:text="See All Farm"
                    android:textSize="8sp" />


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/farmer_myfarmRv"
                android:layout_width="match_parent"
                android:layout_height="250dp"


                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>

    </LinearLayout>




</ScrollView>



