<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.ContractedFarming.NoActionBar"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:elevation="10dp"
                android:outlineAmbientShadowColor="@color/black"
                android:padding="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:theme="@style/Theme.ContractedFarming.NoActionBar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp">

                            <androidx.cardview.widget.CardView
                                app:cardBackgroundColor="@android:color/holo_green_dark"
                                app:cardCornerRadius="40dp"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp">
                                <ImageView
                                 android:layout_width="40dp"
                                 android:layout_height="35dp"
                                 app:srcCompat="@drawable/ic_baseline_thermostat_24" />

                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/weather_data_temprature"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="30 C"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Tempraure"

                                    android:textSize="12sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp">

                            <androidx.cardview.widget.CardView
                                app:cardBackgroundColor="@android:color/holo_orange_light"
                                app:cardCornerRadius="40dp"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="35dp"
                                app:srcCompat="@drawable/baseline_speed_24" />

                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/weather_data_wind_speed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:shadowColor="#3E3434"
                                    android:text="30 m/s"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="WindSpeed"
                                    android:textSize="12sp" />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp">

                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="40dp"
                                android:layout_width="40dp"
                                android:layout_margin="10dp"
                                android:layout_height="40dp"
                                app:cardBackgroundColor="@android:color/holo_blue_bright">

                            <ImageView
                                android:padding="5dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:srcCompat="@drawable/baseline_water_drop_24" />
            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/weather_data_hunidity"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="40 %"

                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Humidity"
                                    android:textSize="12sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"


                            android:paddingLeft="5dp">

                            <androidx.cardview.widget.CardView
                                app:cardBackgroundColor="@android:color/holo_purple"
                                android:padding="2dp"
                                android:layout_margin="10dp"
                                app:cardCornerRadius="40dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp">
                            <ImageView
                                android:padding="5dp"
                                android:layout_width="40dp"
                                android:layout_height="35dp"
                                app:srcCompat="@drawable/baseline_cloud_24" />

                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/weather_data_rainfall"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="50 mm"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Rainfall"
                                    android:textSize="12sp" />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
            <LinearLayout

                android:layout_marginTop="20dp"
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"


            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView6">

            <HorizontalScrollView
                android:id="@+id/horizontal"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:fillViewport="true"
                android:isScrollContainer="false"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view6">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:id="@+id/addStory_layout"
                        android:layout_marginRight="10dp">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/addStoryImg"
                            android:layout_width="100dp"
                            android:layout_height="130dp"

                            android:layout_marginStart="16dp"
                            android:alpha="0.9"
                            android:scaleType="centerCrop"
                            android:src="@drawable/farmer_img"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:riv_corner_radius="10dip" />

                        <View
                            android:id="@+id/view4"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/bg_black_shade"
                            app:layout_constraintBottom_toBottomOf="@+id/addStoryImg"
                            app:layout_constraintEnd_toEndOf="@+id/addStoryImg"
                            app:layout_constraintStart_toStartOf="@+id/addStoryImg"
                            app:layout_constraintTop_toTopOf="@+id/addStoryImg" />

                        <View
                            android:id="@+id/view8"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            android:backgroundTint="@color/white"
                            app:layout_constraintBottom_toBottomOf="@+id/addStory"
                            app:layout_constraintEnd_toEndOf="@+id/addStory"
                            app:layout_constraintStart_toStartOf="@+id/addStory"
                            app:layout_constraintTop_toTopOf="@+id/addStory" />

                        <ImageView
                            android:id="@+id/addStory"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_add_story"
                            app:layout_constraintBottom_toBottomOf="@+id/addStoryImg"
                            app:layout_constraintEnd_toEndOf="@+id/addStoryImg"
                            app:layout_constraintStart_toStartOf="@+id/addStoryImg"
                            app:layout_constraintTop_toTopOf="@+id/addStoryImg"
                            app:layout_constraintVertical_bias="0.3" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Create a story"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            app:layout_constraintEnd_toEndOf="@+id/addStory"
                            app:layout_constraintStart_toStartOf="@+id/addStory"
                            app:layout_constraintTop_toBottomOf="@+id/addStory" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/farmerstoryRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
            </HorizontalScrollView>



        </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Explore Plants"
                android:textSize="24dp"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/farmer_exploreplantsrv"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"

                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="MyPlants"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/farmer_myplantsrv"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"


            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="MyFarm"
            android:textSize="24dp"
            android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/farmer_myfarmRv"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"


            android:layout_width="match_parent"
            android:layout_height="250dp"/>
    </LinearLayout>

</LinearLayout>



