<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:visibility="gone"
        android:id="@+id/prompt_add_story_img_src"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:scaleType="centerCrop"
        android:id="@+id/prompt_add_story_img"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/baseline_add_photo_alternate_24"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/prompt_add_story_disc"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="Enter Description"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        />


    <LinearLayout
        android:layout_marginVertical="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/prompt_add_story_button_cancel"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/md_theme_dark_errorContainer"
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/prompt_add_story_button_post"
            android:layout_marginHorizontal="20dp"
            android:text="POST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</LinearLayout>