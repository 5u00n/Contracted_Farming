<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:outlineSpotShadowColor="@color/black"
    android:outlineAmbientShadowColor="@color/black"
    app:cardCornerRadius="7dp"
    app:cardUseCompatPadding="true"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="5dp"
    app:elevation="0dp"
    android:id="@+id/view_farmer_notification_cardview"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/view_farmer_notification_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"

            android:paddingHorizontal="15dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_farmer_notification_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/view_farmer_notification_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd mmm yyyy"
                android:textSize="12sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView

            android:paddingHorizontal="15dp"
            android:paddingBottom="10dp"
            android:id="@+id/view_farmer_notification_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="notification text"
            android:textSize="16dp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>


