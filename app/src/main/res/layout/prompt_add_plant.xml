<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:elevation="14dp"
        android:layout_width="match_parent"
        app:cardBackgroundColor="?attr/colorPrimary"
        android:layout_height="wrap_content"
        >
    <TextView
        android:layout_margin="10dp"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Plant : "
        android:textAppearance="?android:attr/textAppearanceLarge" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <ImageView
            android:layout_marginLeft="115dp"
            android:src="@drawable/baseline_add_24"
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_plant_image"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

    <EditText
        android:layout_marginBottom="14dp"
        android:id="@+id/prompt_add_plant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Plant Name">

        <requestFocus />

    </EditText>

    <EditText
        android:layout_marginBottom="14dp"
        android:id="@+id/prompt_add_plant_lifespan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Life Span">

    </EditText>
        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_plant_humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Humidity">

        </EditText>
        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_plant_fertilizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fertilizer">

        </EditText>
        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_plant_watertime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Watering Time">

        </EditText>
        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_plant_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Light Required">

        </EditText>
        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_plant_temprature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Temperature range">

        </EditText>


        <EditText
            android:layout_marginBottom="14dp"
            android:id="@+id/prompt_add_plant_disc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Plant Description"
            android:gravity="start|top"
            android:inputType="textMultiLine" />


    </LinearLayout>


</LinearLayout>